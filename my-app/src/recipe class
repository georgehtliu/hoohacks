class Recipe {
    constructor(name, date, ingerdients, calories, price) {
        this.name = name;
        this.date = date;
        this.ingredients = ingredients;
        this.calories = calories;
        this.price = price;
    }
    
    getName() { return this.name; }
    getAge() { return this.age; }
    getIngredients() { return this.ingredients; }
    getCalories() { return this.calories; }
    getPrice() { return this.price; }
    
    substituteIngredient(original, replacement) {
        var location = this.ingredients.indexOf(original);
        if (location >= 0) {
            this.ingredients[location] = replacement;
        }
    }
}

